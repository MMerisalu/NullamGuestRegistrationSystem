@using WebApp.ViewModels
@model CreateEditPaymentMethodVM

@{
    ViewData["Title"] = "Maksemeetodi muutmine";
}

<h1>Maksemeetodi muutmine</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
           <partial name="_CreateEditPaymentMethod" model="Model" />
            <input type="hidden" asp-for="Id" />
            <br />
            <div class="form-group">
                <input type="submit" value="Salvesta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <button class="btn btn-primary" onclick="BackToIndex()">Tagasi</button>
</div>

@section Scripts {
    <script type="text/javascript">
        function BackToIndex() {
            window.location.href = '@Url.Action("Index")';
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
