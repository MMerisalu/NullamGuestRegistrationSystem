@using WebApp.ViewModels
@model IEnumerable<ListOfAttendeeVM>

@{
    ViewData["Title"] = "Üritusest osavõtjad";
}

<h1>Üritusest osavõtjad</h1>

<p>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalIdentifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistryCode)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                @if (item.AttendeeType == App.Enum.AttendeeType.Person)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonalIdentifier)
                    </td>
                }
                else
                {
                    <td>
                    </td>
                }

                @if (item.AttendeeType == App.Enum.AttendeeType.Company)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistryCode)
                    </td>
                }
                else
                {
                    <td>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>
